<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="mpUsedVehiclePU" transaction-type="JTA"> 
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.AdminEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.ProductEntity</class>          
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.ProviderEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.CartItemEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.ClientEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.CommentEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.MessageEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.OrderEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.ReviewEntity</class>
        <class>co.edu.uniandes.csw.mpusedvehicle.entities.VehicleEntity</class>        
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <shared-cache-mode>NONE</shared-cache-mode>
        <properties>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.target-database" value="Derby"/>            
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/jdbcmpUsedVehicleTest"/>
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <property name="javax.persistence.jdbc.password" value="APP"/>
            <property name="eclipselink.logging.level" value="FINE"/>     
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
